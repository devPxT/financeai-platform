{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "baseUrl": "."
  },
  "include": [
    "../**/*.js",
    "../src/**/*.ts",
    "./**/*.ts"
  ]
}