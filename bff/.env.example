# BFF
PORT=4000
NODE_ENV=development

# Auth
MOCK_AUTH=true                 # true para dev (aceita token demo), false para verificar JWT via JWKS
CLERK_JWKS_URI=                # ex.: https://api.clerk.dev/.well-known/jwks.json
CLERK_AUDIENCE=                # audience expected in token (Clerk config)

# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-...

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Microservices & Function
TRANSACTIONS_SERVICE_URL=http://localhost:4100
ANALYTICS_SERVICE_URL=http://localhost:4200
FUNCTION_TRIGGER_URL=http://localhost:4300
FUNCTION_CONTEXT_TRIGGER_URL=http://localhost:4300
FUNCTION_CODE=                  # Optional: Azure Function access code (appended as ?code=... to function calls)

# Internal secret for admin endpoints
INTERNAL_SECRET=change-me-in-prod

# HTTP client config
HTTP_TIMEOUT_MS=8000
RETRY_COUNT=2
CACHE_TTL=25
